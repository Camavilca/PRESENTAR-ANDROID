<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_mascota_foto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/item_mascota_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_mascota_foto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nombre mascota"/>

        <TextView
            android:id="@+id/item_mascota_raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_mascota_foto"
            android:layout_below="@+id/item_mascota_nombre"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="Raza mascota"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
